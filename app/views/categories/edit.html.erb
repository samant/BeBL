<%= content_for :title do %>
  Edit category <%= @category.name %>
<% end %>
<%= content_for :actions do %>
	<%= link_to "Back", categories_path, :class => "btn" %>
	<%= link_to "Show", category_path(@category), :title => "Show this category", :class => "btn btn-info" if can? :read, Category %>
<% end %>

<%= bootstrap_form_for(@category, :html => { :class => 'form-horizontal' }) do |f| -%>
	<%= render "layouts/error_messages", :target => @category %>
	
  <%= render :partial => "form", :locals => {:f => f}%>
	
	<%= f.submit "Update", :disable_with => "Please wait ...", :back => categories_path -%>
<% end %>