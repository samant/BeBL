<%= content_for :title do %>
  Edit project <%= @project.name %>
<% end %>
<%= content_for :actions do %>
	<%= link_to "Back", projects_path, :class => "btn" %>
	<%= link_to "Show", project_path(@project), :title => "Show this project", :class => "btn btn-info" if can? :read, Project %>
<% end %>

<%= bootstrap_form_for(@project, :html => { :class => 'form-horizontal', :multipart => true }) do |f| -%>
  <%= render "layouts/error_messages", :target => @project %>

  <%= render :partial => "form", :locals => {:f => f} %>
  
	<%= f.submit "Update", :disable_with => "Please wait ...", :back => projects_path -%>
<% end %>