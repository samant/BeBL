<%= content_for :title do %>
  Create a new project
<% end %>
<%= content_for :actions do %>
	<%= link_to "Back", projects_path, :class => "btn" %>
<% end %>

<%= bootstrap_form_for(@project, :html => { :class => 'form-horizontal', :multipart => true }) do |f| -%>
  <%= render "layouts/error_messages", :target => @project %>
  
  <%= render :partial => "form", :locals => {:f => f} %>
  
	<%= f.submit "Create", :disable_with => "Please wait ...", :back => projects_path -%>
<% end %>